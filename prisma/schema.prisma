// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String

  leads Lead[]
}

model Lead {

  id Int @id @default(autoincrement())

  name String?
  number String? @unique
  email String? @unique
  company String?
  position String?

  status LeadStatus @default(New)

  actions Action[]

  owner User? @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId Int?

}

enum LeadStatus {
  New
  Attempted_Contact
  Connected

}

model Action {
  id Int @id @default(autoincrement())
  
  done Boolean @default(false)
  due DateTime @default(now())
  type ActionType
  note String?

  priority ActionPriority @default(Low)

  lead Lead @relation(fields: [leadId], references: [id], onDelete: Cascade)
  leadId Int

}

enum ActionPriority {
  Low
  Medium
  High
}

enum ActionType {
  Call
  Email
}